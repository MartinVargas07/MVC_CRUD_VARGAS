@model IEnumerable<MVC_CRUD_VARGAS.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-4">Lista de Usuarios</h1>

            <p class="text-center">
                <a asp-action="Create" class="btn btn-success">Crear Nuevo Usuario</a>
            </p>

            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                        <th>@Html.DisplayNameFor(model => model.Clave)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                            <td>@Html.DisplayFor(modelItem => item.Clave)</td>
                            <td class="text-center">
                                <a asp-action="Edit" class="btn btn-warning mx-1" asp-route-id="@item.Id">Editar</a>
                                <a asp-action="Details" class="btn btn-primary mx-1" asp-route-id="@item.Id">Detalles</a>
                                <a asp-action="Delete" class="btn btn-danger mx-1" asp-route-id="@item.Id">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
